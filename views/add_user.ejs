 <!-- form handling -->
 <!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Responsive Admin Dashboard | Korsat X Parmaga</title>
    <!-- ======= Styles ====== -->
    <link rel="stylesheet" href="./css/style.css">
</head>

<body>
    <!-- =============== Navigation ================ -->
    <div class="container">
        <div class="navigation">
            <ul>
              <li>
                <a href="/home">
                    <span class="icon"><ion-icon name="book"></ion-icon> 
                    </span>
                    <h2>PinjamBuku</h2>
                </a>
            </li>
                <li>
                    <a href="/search">
                        <span class="icon">
                            <ion-icon name="bookmarks"></ion-icon>
                        </span>
                        <span class="title">Search Book</span>
                    </a>
                </li>
  
                <li>
                    <a href="/">
                        <span class="icon">
                            <ion-icon name="people"></ion-icon>
                        </span>
                        <span class="title">Data Peminjam</span>
                    </a>
                </li>
            </ul>
        </div>
  

        <!-- ========================= Main ==================== -->
        <div class="main">
            <div class="topbar">
                <div class="toggle">
                    <ion-icon name="menu-outline"></ion-icon>
                </div>

                
                <div class="cardHeader">
                    <h2>APLIKASI PINJAM BUKU</h2>
                </div>
            </div>

            <!-- ================ Order Details List ================= -->
            <div class="details">
                <div class="recentOrders">
                    <div class="cardHeader">
                        <h2>Form Pemilik</h2>
                    </div>

                    <table>
                        <form action="/api/users" method="POST" id="add_user">
                            <div class="new_user">
                                <div class="form-group">
                                    <label for="id" class="text-light">ID</label>
                                    <input type="text" name="id" value="" placeholder="Masukkan ID">
                                </div>
                                <div class="form-group">
                                    <label for="nama" class="text-light">Nama</label>
                                    <input type="text" name="nama" value="" placeholder="Masukkan Nama">
                                </div>
                                <div class="form-group">
                                    <label for="email" class="text-light">Email</label>
                                    <input type="text" name="email" value="" placeholder="Masukkan Email">
                                </div>
                                <div class="form-group">
                                    <label for="hewan" class="text-light">Hewan</label>
                                    <input type="text" name="hewan" value="" placeholder="Masukkan Jenis Hewan">
                                </div>
                                <div class="form-group">
                                    <label for="nama_hewan" class="text-light">Nama Hewan</label>
                                    <input type="text" name="nama_hewan" value="" placeholder="Masukkan Nama Hewan">
                                </div>
                                <div class="form-group">
                                    <label for="kondisi" class="text-light">Kondisi Hewan</label>
                                    <input type="text" name="kondisi" value="" placeholder="Masukkan Kondisi Hewan">
                                </div>
                        
                                <div class="form-group">
                                    <button type="submit" class="btn text-dark update">Save</button>
                                </div>
                        
                            </div>
                        </form>
                    </table>
                </div>

            </div>
        </div>
    </div>

    <!-- =========== Scripts =========  -->
    <script src="./js/main.js"></script>
    <script src="/js/index.js"></script>
    <script src="/js/app.js"></script>



    <!-- ====== ionicons ======= -->
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    
</body>

</html>
 
 
 